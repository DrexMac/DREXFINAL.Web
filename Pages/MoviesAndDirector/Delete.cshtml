@page
@model DREXFINAL.Web.Pages.MoviesAndDirector.DeleteModel
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Are you sure you want to permanently delete this Movie?</h1>

    @if (Model.Item == null)
    {
        <h2>No record found</h2>
    }
    else
    {
        <form method="post">
            <!-- Movie Details -->
            <div class="mb-3">
                <input type="hidden" asp-for="@Model.Item.Id" />
                <label for="Title" class="form-label">Movie Title</label>
                <input type="text" class="form-control" id="Title" asp-for="@Model.Item.Title" disabled />
            </div>

            <div class="mb-3">
                <label for="Genre" class="form-label">Genre</label>
                <input type="text" class="form-control" id="Genre" asp-for="@Model.Item.Genre" disabled />
            </div>

            <div class="mb-3">
                <label for="Director" class="form-label">Director</label>
                <input type="text" class="form-control" id="Director" value="@Model.Item.Director?.Name" disabled />
            </div>

            <div class="form-group">
                <a href="~/MoviesAndDirector" class="btn btn-success">Back</a>
                <button type="submit" class="btn btn-danger">Hard Delete</button>
            </div>
        </form>
    }
</div>
