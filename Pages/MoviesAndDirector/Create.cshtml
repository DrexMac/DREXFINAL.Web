@page
@model DREXFINAL.Web.Pages.MoviesAndDirector.CreateModel
@using DREXFINAL.Models

<h1>Create Movie</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Title">Title</label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Genre">Genre</label>
        <input asp-for="Input.Genre" class="form-control" />
        <span asp-validation-for="Input.Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ReleaseDate">Release Date</label>
        <input asp-for="Input.ReleaseDate" class="form-control" type="date" />
        <span asp-validation-for="Input.ReleaseDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Input.DirectorId">Director</label>
        <select asp-for="Input.DirectorId"
                asp-items="@(new SelectList(ViewData["Directors"] as IEnumerable<Director>, "Id", "Name"))"
                class="form-control">
        </select>
        <span asp-validation-for="Input.DirectorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
