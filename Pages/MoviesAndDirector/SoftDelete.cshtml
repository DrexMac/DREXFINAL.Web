@page
@model DREXFINAL.Web.Pages.MoviesAndDirector.SoftDeleteModel
@{
    ViewData["Title"] = "Soft Delete Movie";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Are you sure you want to soft delete this Movie?</h1>

    @if (Model.Item == null)
    {
        <p>No record found</p>
    }
    else
    {
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Item.Id" />
                <label for="Title" class="form-label">Movie Title</label>
                <input type="text" class="form-control" id="Title" asp-for="Item.Title" disabled />
            </div>

            <div class="form-group">
                <label for="Genre" class="form-label">Genre</label>
                <input type="text" class="form-control" id="Genre" asp-for="Item.Genre" disabled />
            </div>

            <div class="form-group">
                <label for="ReleaseDate" class="form-label">Release Date</label>
                <input type="text" class="form-control" id="ReleaseDate" asp-for="Item.ReleaseDate" disabled />
            </div>

            <div class="form-group">
                <a href="~/moviesanddirector" class="btn btn-success">Back</a>
                <button type="submit" class="btn btn-warning">Soft Delete</button>
            </div>
        </form>
    }
</div>
